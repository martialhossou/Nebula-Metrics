    // Parallax (orbs + léger zoom)
    const orbs = document.querySelectorAll('.orb');
    const heroImg = document.querySelector('.hero-visual img');
    function parallax(){
      const y = window.scrollY || 0;
      orbs.forEach((el,i)=>{
        const k = [.06,.04,.08][i] || .05;
        el.style.transform = `translateY(${Math.min(120, y*k)}px)`;
      });
      const scale = 1 + Math.min(0.06, y/6000);
      heroImg.style.transform = `scale(${scale}) translateY(${Math.min(16, y*0.02)}px)`;
      heroImg.style.transition = 'transform .12s ease-out';
    }
    parallax();
    window.addEventListener('scroll', parallax, {passive:true});

