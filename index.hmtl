  <style>
    :root{
      --bg:#0B0F1A;            /* fond dark */
      --panel:#111627;         /* cartes verre */
      --glass:rgba(255,255,255,.06);
      --line:rgba(255,255,255,.12);
      --ink:#E9F1FF;           /* texte principal */
      --ink-2:#9CB1D9;         /* secondaire */
      --accent:#22D3EE;        /* cyan néon */
      --accent-2:#A855F7;      /* magenta néon */
      --shadow:0 18px 50px rgba(0,0,0,.35);
      --radius:18px;
      --maxw:1200px;
    }
    *{box-sizing:border-box}
    html{scroll-behavior:smooth}
    body{
      margin:0;background:radial-gradient(1200px 800px at 20% -10%, rgba(34,211,238,.12), transparent 50%),
                      radial-gradient(1000px 700px at 110% 10%, rgba(168,85,247,.10), transparent 50%),
                      var(--bg);
      color:var(--ink);font-family:Inter,system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,"Noto Sans",sans-serif;line-height:1.7;overflow-x:hidden
    }
    .container{max-width:var(--maxw);margin-inline:auto;padding-inline:24px}
    img{max-width:100%;height:auto;display:block}
    a{color:inherit;text-decoration:none}

    /* Header */
    header{position:sticky;top:0;z-index:60;background:rgba(11,15,26,.7);backdrop-filter:saturate(120%) blur(10px);border-bottom:1px solid var(--line)}
    .nav{display:flex;align-items:center;justify-content:space-between;min-height:76px}
    .brand{display:flex;align-items:center;gap:14px}
    .logo{font-family:"Space Grotesk",Inter,system-ui;font-weight:700;letter-spacing:.2px}
    .logo-mark{width:28px;height:28px;border-radius:8px;background:conic-gradient(from 0deg, var(--accent), #67E8F9, #A78BFA, var(--accent))}
    nav ul{display:flex;gap:28px;list-style:none;margin:0;padding:0}
    nav a{font-weight:800;position:relative;color:#D9E6FF}
    nav a:after{content:"";position:absolute;left:0;bottom:-6px;height:2px;width:0;background:linear-gradient(90deg,var(--accent),var(--accent-2));transition:width .25s}
    nav a:hover:after{width:100%}
    .actions{display:flex;align-items:center;gap:12px}
    .btn{display:inline-flex;align-items:center;gap:10px;padding:.8rem 1.15rem;border-radius:14px;border:1px solid var(--line);background:var(--glass);color:#E8F1FF;font-weight:800;backdrop-filter:blur(8px)}
    .btn.primary{border-color:transparent;background:linear-gradient(90deg,var(--accent),var(--accent-2));color:#0A0E1A}
    .btn.link{border:0;background:transparent;color:var(--accent);padding:0}
    .lang{border:1px solid var(--line);background:var(--glass);border-radius:12px;padding:.55rem .9rem;font-weight:800;color:#D9E6FF}

    /* Menu mobile opaque */
    .hamburger{display:none;flex-direction:column;gap:4px;border:0;background:var(--glass);padding:10px;border:1px solid var(--line);border-radius:12px}
    .hamburger span{width:26px;height:3px;background:#CFE3FF;border-radius:6px}
    .backdrop{position:fixed;inset:0;background:rgba(0,0,0,.55);opacity:0;visibility:hidden;transition:.25s;z-index:59}
    .backdrop.show{opacity:1;visibility:visible}
    .mobile-drawer{position:fixed;top:0;right:0;height:100%;width:min(84vw,380px);transform:translateX(100%);transition:transform .35s ease;background:rgba(17,22,39,.98);border-left:1px solid var(--line);z-index:60;display:flex;flex-direction:column}
    .mobile-drawer.open{transform:translateX(0)}
    .drawer-head{display:flex;justify-content:space-between;align-items:center;padding:16px 20px;border-bottom:1px solid var(--line)}
    .drawer-close{border:0;background:linear-gradient(90deg,var(--accent),var(--accent-2));color:#0A0E1A;padding:.6rem 1rem;border-radius:12px;font-weight:900}
    .drawer-body{padding:12px 6px;display:flex;flex-direction:column}
    .drawer-body a{padding:16px 18px;border-bottom:1px solid var(--line);font-weight:800;color:#E9F1FF}

    /* Hero */
    .hero{position:relative;overflow:hidden;border-bottom:1px solid var(--line);isolation:isolate}
    .hero .container{display:grid;grid-template-columns:1.05fr .95fr;gap:42px;min-height:78vh;align-items:center;padding-block:96px}
    h1{font-family:"Space Grotesk",Inter,system-ui;font-weight:700;font-size:clamp(32px,6vw,66px);line-height:1.04;margin:0 0 14px;color:#F2F6FF}
