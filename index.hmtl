    /* orbes parallaxe */
    .orb{position:absolute;inset:auto;border-radius:50%;filter:blur(22px);opacity:.7;pointer-events:none}
    .orb.cyan{width:320px;height:320px;right:-80px;bottom:-80px;background:radial-gradient(closest-side, rgba(34,211,238,.25), transparent 70%)}
    .orb.mag{width:260px;height:260px;left:-70px;top:-70px;background:radial-gradient(closest-side, rgba(168,85,247,.25), transparent 70%)}
    .orb.mini{width:160px;height:160px;right:12%;top:-50px;background:radial-gradient(closest-side, rgba(103,232,249,.22), transparent 70%)}

    section{padding-block:90px}
    .title{font-family:"Space Grotesk",Inter;font-size:30px;margin:0 0 10px;color:#EBF3FF}
    .sub{color:#9CB1D9;margin:0 0 26px}

    /* grille */
    .grid-3{display:grid;grid-template-columns:repeat(3,1fr);gap:26px}
    .grid-2{display:grid;grid-template-columns:1fr 1fr;gap:26px}

    /* cards verre */
    .card{border:1px solid var(--line);border-radius:var(--radius);padding:24px;background:var(--glass);box-shadow:var(--shadow);backdrop-filter:blur(10px)}
    .card h3{margin:0 0 8px;font-size:18px;color:#F0F6FF}
    .pill{display:inline-flex;align-items:center;gap:8px;padding:.35rem .7rem;border-radius:999px;border:1px solid var(--line);font-size:12px;color:#BFD2F5;background:rgba(255,255,255,.04)}

    /* feature icons */
    .ico{width:28px;height:28px;border-radius:8px;display:inline-grid;place-items:center;background:linear-gradient(135deg,var(--accent),var(--accent-2));color:#0A0E1A;font-weight:900}

    /* gallery/screens */
    .shot{border:1px solid var(--line);border-radius:18px;overflow:hidden;background:rgba(255,255,255,.05);box-shadow:var(--shadow)}
    .shot .cover{width:100%;aspect-ratio:16/10;object-fit:cover}

    /* pricing */
    .pricing{display:grid;grid-template-columns:repeat(3,1fr);gap:26px}
    .price{border:1px solid var(--line);border-radius:18px;background:var(--glass);box-shadow:var(--shadow);padding:22px}
    .price .tag{font-weight:900;font-size:28px;color:#F6FBFF}
    .price ul{margin:14px 0 0 0;padding:0;list-style:none;color:#B9C9EB}
    .price li{padding:6px 0;border-top:1px solid var(--line)}
    .toggle{display:inline-flex;align-items:center;gap:10px;border:1px solid var(--line);background:var(--glass);padding:6px 10px;border-radius:999px}

    /* FAQ */
    .faq{display:grid;grid-template-columns:1fr 1fr;gap:20px}
    details{border:1px solid var(--line);border-radius:14px;padding:12px;background:var(--glass);box-shadow:var(--shadow)}
    summary{font-weight:900;cursor:pointer;color:#EAF2FF}

    /* CTA band */
    .band{padding:40px;border-radius:16px;border:1px solid var(--line);background:linear-gradient(135deg, rgba(255,255,255,.06), rgba(255,255,255,.02));box-shadow:var(--shadow);backdrop-filter:blur(8px)}

    /* Footer (propre, aligné, centré) */
    footer{padding-block:48px;border-top:1px solid var(--line);background:rgba(11,15,26,.6);backdrop-filter:blur(8px);color:#B9C9EB}
    .foot{max-width:var(--maxw);margin-inline:auto;padding-inline:24px;width:100%;display:flex;flex-direction:column;align-items:center;justify-content:center;text-align:center;gap:8px}
    .foot .brand{display:flex;align-items:center;justify-content:center;gap:10px;margin-bottom:4px}
    .foot .logo{font-family:"Space Grotesk",Inter;font-weight:700;font-size:18px;color:#EAF2FF}
    .foot .logo-mark{width:26px;height:26px;border-radius:8px;background:conic-gradient(from 0deg, var(--accent), #67E8F9, #A78BFA, var(--accent))}
    .foot .meta{color:#9FB3DD;font-size:14px;line-height:1.6}
    .foot .credit{font-size:14px;color:#9FB3DD}
    .foot a{color:#CBE2FF;text-decoration:underline}

    /* back to top */
    .to-top{position:fixed;right:18px;bottom:18px;width:48px;height:48px;border-radius:999px;border:1px solid var(--line);background:linear-gradient(90deg,var(--accent),var(--accent-2));color:#0A0E1A;display:flex;align-items:center;justify-content:center;font-size:20px;opacity:0;visibility:hidden;transition:.25s;z-index:70}
    .to-top.show{opacity:1;visibility:visible}

    /* Responsive */
    @media (max-width: 980px){
      .hero .container{grid-template-columns:1fr}
      .grid-3,.grid-2,.pricing,.faq{grid-template-columns:1fr}
      nav{display:none}
      .hamburger{display:flex}
      .btn{padding:.55rem .9rem;font-size:13px;border-radius:10px}
      .btn.primary{padding:.65rem 1rem;font-size:13px}
    }
  </style>
</head>
