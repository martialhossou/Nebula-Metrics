    function applyI18n(locale){
      document.querySelectorAll('[data-i18n]').forEach(el=>{
        const path = el.getAttribute('data-i18n').split('.');
        let val = I18N[locale];
        for(const p of path){ val = val?.[p]; }
        if(typeof val === 'string'){ el.textContent = val; }
      });
      document.documentElement.lang = (locale==='fr')?'fr':'en';
      localStorage.setItem('NEBULA_LANG', locale);
    }
    const saved = localStorage.getItem('NEBULA_LANG') || (navigator.language?.startsWith('fr') ? 'fr' : 'en');
    applyI18n(saved);
    function toggleLang(){ applyI18n((localStorage.getItem('NEBULA_LANG')==='fr')?'en':'fr'); }
